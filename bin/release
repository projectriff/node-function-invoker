#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

build_dir=$1
function_dir=$build_dir/function
invoker_dir=$build_dir/invoker

echo "---"
echo "default_process_types:"
if [ -e "function/package.json" ]; then
    echo "  web: FUNCTION_URI=../function node invoker/server.js"
else
    echo "  web: FUNCTION_URI=../function/$ARTIFACT node invoker/server.js"
fi
